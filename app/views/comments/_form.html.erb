<%= form_for([@product, @product.comments.build]) do |f| %>
  <div>
    <%= f.label :commenter %>
  </div>
  <div>
    <%= f.text_field :commenter %>
  </div>
  <div>
    <%= f.label :text %>
  </div>
  <div>
    <%= f.text_area :text %>
  </div>
  <div>
    <%= f.submit %>
  </div>
<% end %>